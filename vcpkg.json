{
    "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
    "dependencies": [
        "argon2",
        "cryptopp",
        "tclap",
        "doctest",
        "sqlite3",
        "fruit",
        {
            "name": "abseil",
            "features": [
                "cxx17"
            ]
        },
        "uni-algo",
        "protobuf"
    ],
    "features": {
        "mimalloc": {
            "description": "Enable linking to mimalloc",
            "dependencies": [
                {
                    "name": "mimalloc",
                    "features": [
                        "override"
                    ]
                }
            ]
        },
        "jemalloc": {
            "description": "Enable linking to jemalloc",
            "dependencies": [
                {
                    "name": "jemalloc"
                }
            ]
        }
    }
}
